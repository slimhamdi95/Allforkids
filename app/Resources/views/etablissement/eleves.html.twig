                                            <tr>
                                                <td class="cmsmasters_table_cell_aligncenter">{{ eleve.user.username }}</td>
                                                <td class="cmsmasters_table_cell_aligncenter">{{ eleve.verif}}</td>
                                                <td>
                                                    <ul>
                                                        {% if ( eleve.verif == 'Non valide' ) %}
                                                            <li>
                                                                <a href="{{ path('eleve_valide',{'id':eleve.rej}) }}" class="btn">Accepter</a>
                                                            </li>
                                                        {% endif %}
                                                        {% if ( eleve.verif == 'Valide' ) %}
                                                        <li>
                                                            <a href="{{ path('eleve_note',{'idelev':eleve.user.id}) }}" class="btn">Noter</a>
                                                        </li>
                                                        {% endif %}
