{% extends 'base.html.twig' %}

{% block  body %}


    <div id="middle" style="padding-top: 15%">
        <style type="text/css">.headline_outer {
                background-image:url{{ asset('bundles/etablissement/wp-content/uploads/2015/12/header.jpg') }};
                background-repeat:no-repeat;
                background-attachment:scroll;
                background-size:cover;
            }.headline_color {
                 background-color:;
             }
            .headline_aligner,
            .cmsmasters_breadcrumbs_aligner {
                min-height:250px;
            }
        </style>
        <div class="headline cmsmasters_color_scheme_first">
            <div class="headline_outer">
                <div class="headline_color"></div><div class="headline_inner align_center">
                    <div class="headline_aligner"></div><div class="headline_text"><h1 class="entry-title">Liste des établissements</h1></div></div>
        </div><div class="middle_inner"><div class="content_wrap fullwidth">

                <!--_________________________ Start Content _________________________ -->
                <div class="middle_content entry" role="main"></div></div><style type="text/css">
                #cmsmasters_row_5abc24b826abd .cmsmasters_row_outer_parent {
                    padding-top: 60px;
                }

                #cmsmasters_row_5abc24b826abd .cmsmasters_row_outer_parent {
                    padding-bottom: 100px;
                }

            </style><div id="cmsmasters_row_5abc24b826abd" class="cmsmasters_row cmsmasters_color_scheme_default cmsmasters_row_top_default cmsmasters_row_bot_default cmsmasters_row_boxed">
                <div class="cmsmasters_row_outer_parent">
                    <div class="cmsmasters_row_outer">
                        <div class="cmsmasters_row_inner">
                            <div class="cmsmasters_row_margin">
                                <div class="cmsmasters_column one_first">
                                    <table class="cmsmasters_table">
                                        <caption></caption>
                                        <thead>
                                        <tr class="cmsmasters_table_row_header">
                                            <th class="cmsmasters_table_cell_aligncenter">Nom</th>
                                            <th class="cmsmasters_table_cell_aligncenter">Type</th>
                                            <th class="cmsmasters_table_cell_aligncenter">Region</th>
                                            <th class="cmsmasters_table_cell_aligncenter">Ville</th>
                                            <th class="cmsmasters_table_cell_aligncenter">Description</th>
                                            {% if ((is_granted('ROLE_ADMIN') == true ) or (is_granted('ROLE_RESPONSABLE') == true )) %}
                                                <th class="cmsmasters_table_cell_aligncenter">Vérification</th>
                                            {% endif %}
                                            <th class="cmsmasters_table_cell_aligncenter">
                                                <div class="profile_details_item">
                                                </div>
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for etablissement in etablissements %}
                                            <tr>
                                                <td class="cmsmasters_table_cell_aligncenter">{{ etablissement.nom }}</td>
                                                <td class="cmsmasters_table_cell_aligncenter">{{ etablissement.type }}</td>
                                                <td class="cmsmasters_table_cell_aligncenter">{{ etablissement.region }}</td>
                                                <td class="cmsmasters_table_cell_aligncenter">{{  etablissement.ville }}</td>
                                                <td class="cmsmasters_table_cell_aligncenter">{{ etablissement.description }}</td>
                                                {% if ((is_granted('ROLE_ADMIN') == true ) or (is_granted('ROLE_RESPONSABLE') == true )) %}
                                                    <td class="cmsmasters_table_cell_aligncenter">{{ etablissement.verification }}</td>
                                                {% endif %}
                                                <td class="cmsmasters_table_cell_aligncenter">
                                                    <ul>
                                                        <li>
                                                            <a href="{{ path('etablissement_show', { 'idEtablissement': etablissement.idEtablissement }) }}">détail</a>
                                                        </li>
                                                        {% if (is_granted('ROLE_RESPONSABLE') == true ) %}
                                                        <li>

                                                            <a href="{{ path('etablissement_edit', { 'idEtablissement': etablissement.idEtablissement }) }}">modifier</a>

                                                        </li>
                                                        {% endif %}
                                                    </ul>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    {% if (is_granted('ROLE_RESPONSABLE') == true ) %}
                                    <ul>
                                        <li>
                                            <a href="{{ path('etablissement_new') }}">Create a new etablissement</a>
                                        </li>
                                    </ul>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="cl"></div><div class="content_wrap fullwidth">

                <div class="middle_content entry" role="main">
                </div>
                <!-- _________________________ Finish Content _________________________ -->



            </div>
        </div>
    </div>
{% endblock %}
