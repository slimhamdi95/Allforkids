{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form class="login100-form validate-form" action="{{ path("fos_user_security_check") }}" method="POST">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
        <span class="label-input100">Pseudo</span>
        <input class="input100" type="text" name="_username" placeholder="écrire votre pseudo">
        <span class="focus-input100"></span>
    </div>

    <div class="wrap-input100 validate-input m-b-18" data-validate = "Password is required">
        <span class="label-input100">Mot de passe</span>
        <input class="input100" type="password" name="_password" placeholder="écrire votre mot de passe">
        <span class="focus-input100"></span>
    </div>

    <div class="flex-sb-m w-full p-b-30">
        <div class="contact100-form-checkbox">
            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
            <label class="label-checkbox100" for="ckb1">
                Remember me
            </label>
        </div>

        <div>
            <a href="{{ path('fos_user_registration_register') }}" class="txt1">
                s'inscrire
            </a>
        </div>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            Se connecter
        </button>
    </div>
</form>


