<body class="body-wrapper">


<div class="main-wrapper">
<section class="pageTitleSection">
    <div class="container">
        <div class="pageTitleInfo">
            <h2>{{e.getNom()  }}</h2>

        </div>
    </div>
</section>
    <section class="mainContent full-width clearfix">
        <div class="container">
            <div class="row">
                <div class="col-md-9 col-sm-8 col-xs-12 block pull-right">
                    <div class="thumbnail thumbnailContent alt">

                        {% for message in app.flashes('notice') %}
                            <div  class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        <img src="{{ asset('uploads/images/'~e.getPhoto()) }}" alt="image" class="img-responsive">
                        <div class="caption border-color-1 singleBlog">
                            <h3 class="color-1">Description.</h3>
                            <p>{{ e.getDescriptionn() }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12 pull-left">
                    <aside>
                        <a href="{{ path('AjoutE') }}" class="btn btn-primary  bg-color-1 border-color-1 btn-block"> Ajouter Mon Evenement </a>
                        <br>
                        <br>
                        <div class="panel panel-default eventSidebar">
                            <div class="panel-heading bg-color-1 border-color-1">
                                <h3 class="panel-title">Event Information</h3>
                            </div>
                            <div class="panel-body">
                                <ul class="media-list">
                                    <li class="media">
                                        <div class="media-left iconContent bg-color-2">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                        </div>
                                        <div class="media-body iconContent">
                                            <h4 class="media-heading color-2">Start Date</h4>
                                            <p>{{ e.getDate() |date("m/d/Y") }}</p>
                                        </div>
                                    </li>
                                    <li class="media">
                                        <div class="media-left iconContent bg-color-3">
                                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                                        </div>
                                        <div class="media-body iconContent">
                                            <h4 class="media-heading color-3">Event Temps</h4>
                                            <p>{{ e.getTemp()|date('H:i') }}</p>
                                        </div>
                                    </li>
                                    <li class="media iconContet">
                                        <div class="media-left iconContent bg-color-4">
                                            <i class="fa fa-phone" aria-hidden="true"></i>
                                        </div>
                                        <div class="media-body iconContent">
                                            <h4 class="media-heading color-4">Contact </h4>
                                            <p>{{ u.email }}</p>
                                        </div>
                                    </li>

                                    {% if v == false %}
                                    {% if pe == false and nb != 0 %}
                                        <li><a href="{{ path('ParticipE',{'id':e.getIdEvenement()}) }}" class="btn btn-primary bg-color-6 btn-block"> Inscrire maintenant</a></li>
                                    {% elseif  pe == false and nb == 0  %}
                                        <li  class="media"> <h4 class="center-block color-3"><strong>Complet</strong></h4></li>
                                    {% else %}
                                    <li>
                                        <a href="" class="btn btn-primary bg-color-6 btn-block" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ e.getIdEvenement() }}">Anuller l'inscription    </a>
                                        <div class="modal fade" id="deleteModal{{ e.getIdEvenement() }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <br><br><br><br>
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                        <h4 class="modal-title">Comfirmation d' Anulation  :</h4>
                                                    </div>
                                                    <div class="modal-body" >
                                                        <p><span>Voulez-vous vraiment Anuller l'inscription a  <a href="#"></a>  {{ e.getNom() }}? </span></p>

                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default " data-dismiss="modal">Annuler</button>
                                                        <a href="{{ path ('AnulParticipE',{'id':e.getIdEvenement()}) }}" data-toggle="modal" class="btn btn-danger"  id="lien" >Confirme</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                  {% endif %}
                                        {% else %}
                                            <li><a href="{{ path('Update',{'id':e.getIdEvenement()}) }}" class="btn btn-primary bg-color-2 btn-block">Modifier</a></li>
                                            <li>
                                                <a href="" class="btn btn-primary bg-color-3 btn-block" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ e.getIdEvenement() }}">Supprimer    </a>
                                                <div class="modal fade" id="deleteModal{{ e.getIdEvenement() }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <br><br><br><br>
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                <h4 class="modal-title">Comfirmation de Suppression  :</h4>
                                                            </div>
                                                            <div class="modal-body" >
                                                                <p><span>Voulez-vous vraiment Supprimer <a href="#"></a>  {{ e.getNom() }}? </span></p>

                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default " data-dismiss="modal">Annuler</button>
                                                                <a href="{{ path ('Delete',{'id':e.getIdEvenement()}) }}" data-toggle="modal" class="btn btn-danger"  id="lien" >Confirme</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
